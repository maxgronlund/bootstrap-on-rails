doctype html
html
  head
    title Bootstrap with jQuery Mobile
    = csrf_meta_tag
    = stylesheet_link_tag 'jquery-mobile-1.0'
    = stylesheet_link_tag 'jqm-docs'
    = javascript_include_tag 'mobile'


    meta name="viewport" content="width=device-width, initial-scale=1"

    javascript:
      var session_key      = '#{cookies[Rails.application.config.session_options[:key]]}';
      var session_key_name = '#{Rails.application.config.session_options[:key]}';
    = yield :head


  body
    = yield
    